<mapper namespace="com.startcaft.basic.dao.master.IRoleResourceDao">

    <resultMap id="BaseResultMap" type="com.startcaft.basic.core.entity.RoleResource">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="role_id" jdbcType="BIGINT" property="roleId"/>
        <result column="resoruce_id" jdbcType="BIGINT" property="resoruceId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, role_id, resoruce_id
